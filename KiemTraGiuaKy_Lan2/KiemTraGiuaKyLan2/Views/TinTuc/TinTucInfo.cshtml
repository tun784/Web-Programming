@model IEnumerable<KiemTraGiuaKyLan2.Models.TinTuc>

@{
    ViewBag.Title = "TinTucInfo";
    Layout = "~/Views/Shared/UserLayoutTest.cshtml";
}

<div class="container">
    <h2 style="text-transform: uppercase; font-weight: bolder;">Tin tức - Sự kiện - khuyến mãi - khác</h2>
    <br />
    <div class="table-responsive">
        <table class="table table-striped table-bordered">

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><img src="~/Images_KTL2/@item.AnhMH" alt="News Image" style="max-width: 100px; max-height: 100px;"></td>
                        <td>
                            <h5>@Html.DisplayFor(modelItem => item.TieuDeTin)</h5>
                            @Html.DisplayFor(modelItem => item.NoiDung)
                            <br />
                            <label class="text-danger">@Html.DisplayFor(modelItem => item.NgayDang)</label>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
