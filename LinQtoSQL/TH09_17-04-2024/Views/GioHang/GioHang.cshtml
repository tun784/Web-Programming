@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<h2>GIỎ HÀNG CỦA BẠN</h2>
<div class="card border-dark">
    <table class="table">
        <tr style="background-color: lightyellow">
            <th>MÃ SÁCH</th>
            <th>TÊN SÁCH</th>
            <th>ẢNH BÌA</th>
            <th>SỐ LUỌNG</th>
            <th>ĐƠN GIÁ</th>
            <th>THÀNH TIỀN</th>
            <th></th>
            <th>@Html.ActionLink("Delete all", "XoaGioHang_All", "GioHang")</th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td width="12%">@item.iMaSach</td>
                <td width="26%">@item.sTenSach</td>
                <td width="22%"><img src="/HinhAnhSP/@item.sAnhBia" width="150%"></td>
                @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @MaSP = item.iMaSach } )) {
                    <td width="12%"><input type="number" min="1" name = "txtSoLuong" value="@item.iSoLuong" size="2"></td>
                    <td width="12%">@String.Format("{0:0,0}", item.dDonGia)</td>
                    <td width="16%">@String.Format("{0:0,0}", item.dThanhTien)</td>
                    <td><a href="@Url.Action("XemChiTiet", "Sach", new { @ms = item.iMaSach })">Details</a></td>
                    <td>@Html.ActionLink("Delete", "XoaGioHang", new { @MaSP = item.iMaSach })</td>
                    <td> <input type="submit" value="Update" class="btn btn-primary"></td>
                }
            </tr>
        }

        <tr style="background-color: lightyellow">
            <td colspan="3" style="color:blue; font-weight:bold;text-align:right;">Tổng cộng:</td>
            <td style="color:red; font-weight:bold; ">SL: @ViewBag.TongSoLuong</td>
            <td> </td>
            <td colspan="2" style="color:red; font-weight:bold;text-align:left;">TT:@String.Format("{0:0,0}",ViewBag.TongThanhTien) VNĐ</td>
            <td colspan="2"><a href="/GioHang/DatHang" class="btn btn-primary"> ĐẶT HÀNG</a></td>
        </tr>
    </table>
</div>
