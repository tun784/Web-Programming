
@{
    ViewBag.Title = "CreateAlbum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        Tạo Album
                    </div>
                    <div class="card-body">
                        <form>
                            <div class="form-group">
                                <label for="albumName">Tên Album</label>
                                <input type="text" class="form-control" id="albumName" name="TenAlbum" placeholder="Nhập tên album">
                            </div>
                            <div class="form-group">
                                <label for="albumCover">Ảnh Bìa</label>
                                <input type="file" class="form-control-file" name="AnhBia" id="albumCover">
                            </div>
                            <button type="submit" class="btn btn-primary">Tạo Album</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

