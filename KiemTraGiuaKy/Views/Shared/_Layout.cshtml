<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>

    <!--Bootstrap 4-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
</head>
<body style="color:white;background-color:blue">
    <div id="Wrapper" class="container">
        <br />
        @RenderPage("~/Views/Shared/Header.cshtml")
        @RenderPage("~/Views/Shared/Menu.cshtml")
        <br />
        <div id="Content" class="row">
            <div class="col-xs-12 col-sm-6 col-md-9">
                @RenderBody()
            </div>
            <div class="col-xs-12 col-sm-6 col-md-3">
                <div class="list-group list-group-flush text-left bg-light">
                    <img src="~/Assets/images/BannerRight.JPG" alt="Banner" />
                </div>

                <div class="list-group list-group-flush text-left bg-light">
                    <img src="~/Assets/images/QC1.JPG" alt="QuangCao1" />
                </div>
            </div>
        </div>
        @RenderPage("~/Views/Shared/Footer.cshtml")
    </div>
</body>
</html>